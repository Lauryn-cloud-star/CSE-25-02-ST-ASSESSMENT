doctype html
html
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    title Ecommerce System

    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="/css/product.css")
    link(href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap", rel="stylesheet")

  body
    // Main Container
    .container.mt-5.pt-5
      .row.mt-5
        // Left: Form
        .col-md-8
          h2.mb-4 Add Product
          form#productForm(method="post", enctype="multipart/form-data", onsubmit="handleFormSubmit(event)")
            .mb-3
              label.form-label(for="productName") Product Name:
              input#productName.form-control(type="text", name="productName", required)
              small.text-danger#productName-error

            .mb-3
              label.form-label(for="category") Category
              input#productName.form-control(type="text", name="category", required)
              small.text-danger#productName-error  
            .mb-3
              label.form-label(for="price") Price (UGX):
              input#price.form-control(type="number", name="price", min="0", required)
              small.text-danger#price-error

            .mb-3
              label.form-label(for="quantity") Quantity:
              input#quantity.form-control(type="number", name="quantity", min="1", required)
              small.text-danger#quantity-error

            .mb-3
              label.form-label(for="color") Color:
              input#color.form-control(type="text", name="color", required)
              small.text-danger#color-error

            .mb-3
              label.form-label(for="productImage") Upload Image:
              input#productImage.form-control(type="file", name="productImage", accept="image/*", required)
              small.text-danger#image-error

            .d-flex.justify-content-between.mt-4
              button.btn.btn-success(type="submit") Save
              button.btn.btn-secondary(type="reset") Clear

        // Right: Cards
        .col-md-4
          .card.mb-3.shadow-sm
            .card-body.text-center
              h5.card-title Total Products
              p#totalProducts 0

          .card.shadow-sm
            .card-body.text-center
              h5.card-title Total Stock Value
              p#totalValue UGX 0

      // Table
      .row.mt-5
        .col-12
          table.table.table-bordered.table-striped
            thead
              tr
                th ID
                th NAME
                th CATEGORY
                th PRICE (UGX)
                th QUANTITY
            tbody#productTableBody
              // Dynamic rows will be inserted here via JS

    // JS Scripts
    script(src="/js/product.js")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js")
