doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Product Management
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css' rel='stylesheet')
  link(rel='stylesheet' href='../public/css/style.css')
.container-main
  .row.mb-3.h-100
    .col-md-6.pe-md-3.d-flex.flex-column
      .stats-row
        .stat-card
          .combined-stats
            .stat-value-container
              .large-stat UGX 50,000,000
              p.text-muted.mb-0 Sales
            .stat-divider
            .stat-value-container
              .large-stat UGX 15,000,000
              p.text-muted.mb-0 Orders
      .stats-row
        .stock-stats-container
          .pe-md-2
            .stat-card
              .large-stat.in-stock UGX 42,000,000
              p.text-muted.mb-0 In stock
          .ps-md-2
            .stat-card
              .out-of-stock-count 5
              p.out-of-stock-label.mb-0 Out of stock
    .col-md-6.ps-md-3
      .add-product-form.h-100
        h3.form-title Add Product
        .mb-2
          input#product-name.form-control.form-control-sm(type='text' placeholder='Product Name')
        .mb-2
          input#category.form-control.form-control-sm(type='text' placeholder='Category')
        .mb-2
          input#price.form-control.form-control-sm(type='text' placeholder='Price')
        .mb-2
          input#quantity.form-control.form-control-sm(type='text' placeholder='Quantity')
        .row.mb-2.gx-2
          .col-md-6
            input#color.form-control.form-control-sm(type='text' placeholder='Color')
          .col-md-6
            input#size.form-control.form-control-sm(type='text' placeholder='Upload Image')
        .d-flex.justify-content-center.gap-2
          button.btn.save-btn.py-1 SAVE
          button.btn.clear-btn.py-1 CLEAR
  .row.table-container
    .col-12
      .table-responsive
        table.table.table-striped.table-bordered.table-sm
          thead.table-header
            tr
              th ID
              th NAME
              th CATEGORY
              th PRICE(UGX)
              th QUANTITY
