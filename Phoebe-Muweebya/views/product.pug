doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Procured Produce
    link(
      rel="stylesheet",
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css",
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH",
      crossorigin="anonymous"
    )
    style.
      .card-stats {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
        justify-content: space-between;
        margin-top: 2rem;
      }
      .stat-card {
        flex: 1;
        min-width: 200px;
        text-align: center;
        padding: 1rem;
        border-radius: 0.5rem;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
        background: #fff;
      }
      .form-section {
        background: #fff;
        padding: 1.5rem;
        border-radius: 0.5rem;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
      }

  body
    .container

      // Stats
      .card-stats
        .stat-card.border
          h5 UGX 50,000,000
          small.text-muted Sales

        .stat-card.border
          h5 UGX 15,000,000
          small.text-muted Orders

        .stat-card.border
          h5.text-success UGX 42,000,000
          small.text-muted In stock

        .stat-card.border
          h5.text-danger 5
          small.text-muted Out of stock

      // Form Section
      .row.my-5
        .col-md-6.offset-md-3
          h3.text-center.mb-4 Add Product
          
          if error
            .alert.alert-danger.text-center #{error}

          form#productForm(action="/addProduct", method="POST", class="form-section")

            .mb-3
              label.form-label(for="productName") Product Name
              input#productName.form-control(type="text", name="productname", placeholder="Product Name")

            .mb-3
              label.form-label(for="category") Category
              input#category.form-control(type="text", name="category", placeholder="Category")

            .mb-3
              label.form-label(for="price") Price (UGX)
              input#price.form-control(type="number", name="price", placeholder="Price")

            .mb-3
              label.form-label(for="quantity") Quantity
              input#quantity.form-control(type="number", name="quantity", placeholder="Quantity")

            .mb-3
              label.form-label(for="color") Color
              input#color.form-control(type="text", name="color", placeholder="Color")

            .mb-3
              label.form-label(for="image") Upload Image
              input#image.form-control(type="file", name="image")

            .d-flex.justify-content-between.mt-4
              button.btn.btn-warning(type="submit") SAVE
              button.btn.btn-secondary(type="reset") CLEAR

      // Table Section
      h3.text-center.mb-4 Product List

      table.table.table-striped.table-hover
        thead
          tr
            th ID
            th NAME
            th CATEGORY
            th PRICE(UGX)
            th QUANTITY

        tbody
          if procuredProduce && procuredProduce.length
            each product in procuredProduce
              tr
                td #{product._id}
                td #{product.productname}
                td #{product.category}
                td #{product.price}
                td #{product.quantity}
          else
            tr
              td(colspan="5" class="text-center text-muted") No products available.

    script(src="/js/product.js")
    script(
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js",
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz",
      crossorigin="anonymous"
    )
